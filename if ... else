//Написание условий
#include <stdio.h>

int main() {

    int time = 18;

    if (time < 12) {
        printf("Good morging");
    } else if (time <= 16) {
        printf("Good evening");
    } else {
        printf("Good night");
    }
}

// second

/* Написание программы сколько времени и вывод  */
#include <stdio.h>

int main() {

    int time;

    printf("Which time have you?:");
    scanf("%d", &time);

    if (time < 12) {
        printf("Good morging");
    } else if (time <= 16) {
        printf("Good evening");
    } else {
        printf("Good night");
    }
}
